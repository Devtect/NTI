import math


# def round_cal():
#     return round(input)


# def ceiling():
#     return math.ceil(input)


# def flooring():
#     return math.floor(input)


# def square():
#     return math.sqrt(input)


# def factorial_calc():
#     return math.factorial(input)


# def absolute_val():
#     return abs(input)

while True:
    choice = input(''' 
    1. Round
    2. Ceiling
    3. Floor
    4. Square root
    5. Factorial
    6. Absolute value
    7. Exit
    Choose an operation: ''')

    if choice == "7":
        print("Thank you for using math methods!")
        break

    input_num = float(input("Please enter a number: "))

    if choice == "1":
        print(round(input_num))
    elif choice == "2":
        print(math.ceil(input_num))
    elif choice == "3":
        print(math.floor(input_num))
    elif choice == "4":
        print(math.sqrt(input_num))
    elif choice == "5":
        print(math.factorial(int(input_num)))
    elif choice == "6":
        print(abs(input_num))
    else:
        print("Invalid choice, please select a number from 1-7")
        continue

    more_ops = input("Would like to do another operation?(Y/N)")
    if more_ops.upper != "Y":
        print("Thank you for using math methods!")
        break
